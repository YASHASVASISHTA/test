<body>
    <!-- Navigation Panel -->
    <div class="nav-panel">
        <div class="nav-header">
            <div class="nav-title">Questions</div>
            <div class="timer" id="navTimer">01:30:00</div>
        </div>
        
        <div class="question-grid" id="questionGrid">
            <!-- Question buttons will be added here -->
        </div>
        
        <button class="submit-btn" onclick="showSubmitModal()">Submit Test</button>
    </div>

    <!-- Main Content -->
    <div class="main-content" id="mainContent">
        <div class="question-container">
            <div class="question-header">
                <div class="question-number">Question <span id="currentQNum">1</span></div>
                <button class="flag-btn" id="flagBtn" onclick="toggleFlag()">ðŸš© Flag</button>
            </div>
            
            <div class="question-text" id="questionText">
                Loading question...
            </div>
            
            <img class="question-image" id="questionImage" style="display: none;">
            
            <div class="options-container" id="optionsContainer">
                <!-- Options will be loaded here -->
            </div>
            
            <input type="text" class="fill-blank-input" id="fillBlankInput" style="display: none;" placeholder="Type your answer here">
            
            <div class="navigation-buttons">
                <button class="nav-btn" id="prevBtn" onclick="prevQuestion()" disabled>Previous</button>
                <button class="nav-btn" id="nextBtn" onclick="nextQuestion()">Next</button>
            </div>
        </div>
    </div>

    <!-- Submit Modal -->
    <div class="modal" id="submitModal">
        <div class="modal-content">
            <h3 class="modal-title">Submit Test?</h3>
            <p>Are you sure you want to submit your test? You won't be able to make changes after submission.</p>
            
            <div class="modal-buttons">
                <button class="modal-btn modal-cancel" onclick="hideSubmitModal()">Cancel</button>
                <button class="modal-btn modal-submit" onclick="submitTest()">Submit</button>
            </div>
        </div>
    </div>

    <script>
        // Global variables
        let questions = [];
        let currentQuestion = 0;
        let userAnswers = {};
        let flaggedQuestions = new Set();
        let timeLeft = 5400; // 1.5 hours in seconds
        let timerInterval;

        // DOM elements
        const questionGrid = document.getElementById('questionGrid');
        const questionText = document.getElementById('questionText');
        const questionImage = document.getElementById('questionImage');
        const optionsContainer = document.getElementById('optionsContainer');
        const fillBlankInput = document.getElementById('fillBlankInput');
        const currentQNum = document.getElementById('currentQNum');
        const flagBtn = document.getElementById('flagBtn');
        const prevBtn = document.getElementById('prevBtn');
        const nextBtn = document.getElementById('nextBtn');
        const navTimer = document.getElementById('navTimer');
        const mainContent = document.getElementById('mainContent');
        const submitModal = document.getElementById('submitModal');

        // Show error message
        function showError(message) {
            mainContent.innerHTML = `
                <div class="error-message">
                    <h3>Error Loading Test</h3>
                    <p>${message}</p>
                    <p>Please ensure:</p>
                    <ul style="text-align: left; margin: 1rem auto; max-width: 300px;">
                        <li>test.json exists in the same folder</li>
                        <li>The file contains valid questions</li>
                        <li>You're using a web server (not file://)</li>
                    </ul>
                    <button class="retry-btn" onclick="location.reload()">Retry</button>
                </div>
            `;
            document.querySelector('.nav-panel').style.display = 'none';
        }

        // Load test questions
        async function loadQuestions() {
            try {
                // Try to load from multiple possible locations
                const pathsToTry = [
                    'test.json',
                    './test.json',
                    '../test.json',
                    'tests/test.json',
                    './tests/test.json'
                ];
                
                let response;
                for (const path of pathsToTry) {
                    try {
                        response = await fetch(path);
                        if (response.ok) break;
                    } catch (e) {
                        console.log(`Failed to load from ${path}`);
                    }
                }
                
                if (!response || !response.ok) {
                    throw new Error('Could not find test.json in any standard location');
                }
                
                questions = await response.json();
                
                // Validate questions
                if (!Array.isArray(questions)) {
                    throw new Error('Test file must contain an array of questions');
                }
                if (questions.length === 0) {
                    throw new Error('Test file contains no questions');
                }
                
                initializeTest();
            } catch (error) {
                console.error('Error loading questions:', error);
                showError(error.message || 'Failed to load test questions');
            }
        }

        function initializeTest() {
            // Create question navigation buttons
            questions.forEach((_, index) => {
                const btn = document.createElement('button');
                btn.className = 'question-btn';
                btn.textContent = index + 1;
                btn.onclick = () => goToQuestion(index);
                questionGrid.appendChild(btn);
            });

            // Initialize user answers
            questions.forEach((_, index) => {
                userAnswers[index] = null;
            });

            // Start timer
            startTimer();
            
            // Load first question
            loadQuestion(0);
        }

        function startTimer() {
            updateTimerDisplay();
            timerInterval = setInterval(() => {
                timeLeft--;
                updateTimerDisplay();
                
                if (timeLeft <= 0) {
                    clearInterval(timerInterval);
                    submitTest();
                }
            }, 1000);
        }

        function updateTimerDisplay() {
            const hours = Math.floor(timeLeft / 3600);
            const minutes = Math.floor((timeLeft % 3600) / 60);
            const seconds = timeLeft % 60;
            
            navTimer.textContent = `${hours.toString().padStart(2, '0')}:${minutes.toString().padStart(2, '0')}:${seconds.toString().padStart(2, '0')}`;
            
            // Change color when time is running low
            if (timeLeft < 300) { // 5 minutes
                navTimer.style.background = '#e74c3c';
            } else if (timeLeft < 900) { // 15 minutes
                navTimer.style.background = '#f39c12';
            }
        }

        function loadQuestion(index) {
            currentQuestion = index;
            const question = questions[index];
            
            // Update question number
            currentQNum.textContent = index + 1;
            
            // Update question text
            questionText.textContent = question.question;
            
            // Update question image if exists
            if (question.image) {
                questionImage.src = question.image;
                questionImage.style.display = 'block';
            } else {
                questionImage.style.display = 'none';
            }
            
            // Update navigation buttons
            prevBtn.disabled = index === 0;
            nextBtn.textContent = index === questions.length - 1 ? 'Finish' : 'Next';
            
            // Update flag button
            updateFlagButton();
            
            // Load question type
            if (question.type === 'mcq') {
                loadMCQQuestion(question);
            } else if (question.type === 'fillblank') {
                loadFillBlankQuestion(question);
            }
            
            // Update question grid buttons
            updateQuestionGrid();
        }

        function loadMCQQuestion(question) {
            optionsContainer.style.display = 'grid';
            fillBlankInput.style.display = 'none';
            
            optionsContainer.innerHTML = '';
            
            question.options.forEach((option, idx) => {
                const optionDiv = document.createElement('div');
                optionDiv.className = 'option';
                if (userAnswers[currentQuestion] === idx) {
                    optionDiv.classList.add('selected');
                }
                optionDiv.onclick = () => selectOption(idx);
                
                optionDiv.innerHTML = `
                    <div class="option-label">${String.fromCharCode(65 + idx)}</div>
                    <div>${option}</div>
                `;
                
                optionsContainer.appendChild(optionDiv);
            });
        }

        function loadFillBlankQuestion(question) {
            optionsContainer.style.display = 'none';
            fillBlankInput.style.display = 'block';
            
            fillBlankInput.value = userAnswers[currentQuestion] || '';
            fillBlankInput.oninput = () => {
                userAnswers[currentQuestion] = fillBlankInput.value.trim();
                updateQuestionGrid();
            };
        }

        function selectOption(optionIndex) {
            userAnswers[currentQuestion] = optionIndex;
            
            // Update UI
            document.querySelectorAll('.option').forEach((option, idx) => {
                if (idx === optionIndex) {
                    option.classList.add('selected');
                } else {
                    option.classList.remove('selected');
                }
            });
            
            updateQuestionGrid();
        }

        function toggleFlag() {
            if (flaggedQuestions.has(currentQuestion)) {
                flaggedQuestions.delete(currentQuestion);
            } else {
                flaggedQuestions.add(currentQuestion);
            }
            updateFlagButton();
            updateQuestionGrid();
        }

        function updateFlagButton() {
            if (flaggedQuestions.has(currentQuestion)) {
                flagBtn.classList.add('flagged');
                flagBtn.textContent = 'ðŸš© Flagged';
            } else {
                flagBtn.classList.remove('flagged');
                flagBtn.textContent = 'ðŸš© Flag';
            }
        }

        function updateQuestionGrid() {
            const buttons = questionGrid.querySelectorAll('.question-btn');
            
            buttons.forEach((btn, index) => {
                // Reset classes
                btn.className = 'question-btn';
                
                // Current question
                if (index === currentQuestion) {
                    btn.classList.add('current');
                }
                
                // Answered questions
                if (userAnswers[index] !== null) {
                    btn.classList.add('answered');
                }
                
                // Flagged questions
                if (flaggedQuestions.has(index)) {
                    btn.classList.add('flagged');
                }
            });
        }

        function goToQuestion(index) {
            loadQuestion(index);
        }

        function prevQuestion() {
            if (currentQuestion > 0) {
                loadQuestion(currentQuestion - 1);
            }
        }

        function nextQuestion() {
            if (currentQuestion < questions.length - 1) {
                loadQuestion(currentQuestion + 1);
            } else {
                showSubmitModal();
            }
        }

        function showSubmitModal() {
            submitModal.style.display = 'flex';
        }

        function hideSubmitModal() {
            submitModal.style.display = 'none';
        }

        function submitTest() {
            clearInterval(timerInterval);
            
            // Calculate score
            let score = 0;
            let correct = 0;
            let wrong = 0;
            let unattempted = 0;
            
            questions.forEach((question, index) => {
                if (userAnswers[index] !== null) {
                    if (question.type === 'mcq') {
                        if (userAnswers[index] === question.correct) {
                            correct++;
                            score += 4;
                        } else {
                            wrong++;
                            score -= 1;
                        }
                    } else if (question.type === 'fillblank') {
                        if (userAnswers[index].toLowerCase() === question.answer.toLowerCase()) {
                            correct++;
                            score += 4;
                        } else {
                            wrong++;
                            score -= 1;
                        }
                    }
                } else {
                    unattempted++;
                }
            });
            
            // Save results
            const result = {
                score: score,
                correct: correct,
                wrong: wrong,
                unattempted: unattempted,
                total: questions.length,
                answers: userAnswers,
                questions: questions
            };
            
            localStorage.setItem('testResult', JSON.stringify(result));
            
            // Redirect to results page
            window.location.href = 'results.html';
        }

        // Initialize when page loads
        document.addEventListener('DOMContentLoaded', () => {
            loadQuestions();
        });
    </script>
</body>
</html>
